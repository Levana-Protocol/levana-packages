{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", "output/**"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": [],
      "cache": false
    },
    "publish": {
      "dependsOn": ["build"],
      "outputs": []
    }
  }
}
